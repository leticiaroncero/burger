<img src="assets/img/burger.svg" id="burger-img"></img>

<h1>Eat-Da-Burger!</h1>
<div id="available-burgers">
    {{#each burgers}}
    {{#unless devoured}}
    <div>
        {{id}}. {{burger_name}}
        <button class="devour" id={{id}}>Devour it!</button>
    </div>
    {{/unless}}
    {{/each}}
</div>
<div id="devoured-burgers">
    {{#each burgers}}
    {{#if devoured}}
    <div>
        {{id}}. {{burger_name}}
    </div>
    {{/if}}
    {{/each}}
</div>

<form class="create-form">
    <textarea id="new-burger" name="name"></textarea></br>
    <input type="submit">
    <p id="form-desc">Enter a burger you want to eat. Click the "Submit" button.</p>
</form>